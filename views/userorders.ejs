<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= pageTitle %></title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
      background-color: #f4f4f4;
      color: #333;
    }
    .container {
      max-width: 900px;
      margin: 0 auto;
    }
    .order {
      background: #fff;
      padding: 20px;
      margin-bottom: 30px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
      position: relative;
    }
    .order-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 15px;
    }
    .order-header h2 {
      margin: 0;
      font-size: 1.2rem;
    }
    .delete-order-btn {
      background: #dc3545;
      color: #fff;
      border: none;
      padding: 6px 12px;
      border-radius: 4px;
      cursor: pointer;
      font-size: 0.9rem;
      transition: background 0.2s;
    }
    .delete-order-btn:hover {
      background: #c82333;
    }
    .order-info p {
      margin: 4px 0;
      font-size: 0.9rem;
    }
    .products {
      display: flex;
      flex-wrap: wrap;
      gap: 15px;
      margin-top: 15px;
    }
    .product {
      background: #fafafa;
      border: 1px solid #ddd;
      border-radius: 4px;
      width: 180px;
      overflow: hidden;
      position: relative;
      text-align: center;
    }
    .product img {
      width: 100%;
      height: 120px;
      object-fit: cover;
    }
    .product p {
      margin: 6px 8px;
      font-size: 0.85rem;
    }
    .remove-product-btn {
      position: absolute;
      top: 6px;
      right: 6px;
      background: rgba(220,53,69,0.9);
      color: #fff;
      border: none;
      padding: 2px 6px;
      border-radius: 50%;
      cursor: pointer;
      font-size: 0.8rem;
      line-height: 1;
      transition: background 0.2s;
    }
    .remove-product-btn:hover {
      background: rgba(200,35,50,0.9);
    }

    /* Responsive adjustments for Order ID & Buttons */
    @media (max-width: 480px) {
      .order-header h2 {
        font-size: 1rem;
        line-height: 1.2;
      }
      .delete-order-btn {
        padding: 4px 8px;
        font-size: 0.8rem;
      }
      .remove-product-btn {
        top: 4px;
        right: 4px;
        padding: 2px 4px;
        font-size: 0.7rem;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <% orders.forEach(order => { %>
      <div class="order">
        <div class="order-header">
          <h2>Order #<%= order.order_id %></h2>
          <form
            action="/my-orders/<%= order._id %>?_method=DELETE"
            method="POST"
            onsubmit="return confirm('Are you sure you want to delete order #<%= order.order_id %>?');"
            style="display:inline"
          >
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="delete-order-btn">&times;</button>
          </form>
        </div>

        <div class="order-info">
          <!-- Add other order info here -->
        </div>

        <% if (order.products && order.products.length) { %>
          <div class="products">
            <% order.products.forEach(prod => { %>
              <div class="product">
                <img src="<%= prod.image %>" alt="<%= prod.name %>">
                <p><strong><%= prod.name %></strong></p>
                <p>Category: <%= prod.category || 'N/A' %></p>
                <p>Price: â‚¹<%= prod.price.toFixed(2) %></p>
                <p>Qty: <%= prod.quantity %></p>

                <!-- Product-level delete button if needed -->
                <form
                  action="/my-orders/<%= order._id %>/products/<%= prod._id %>?_method=DELETE"
                  method="POST"
                  onsubmit="return confirm('Remove <%= prod.name %> from order #<%= order.order_id %>?');"
                  style="display:inline"
                >
                  <input type="hidden" name="_method" value="DELETE">
                  <button type="submit" class="remove-product-btn">&times;</button>
                </form>
              </div>
            <% }) %>
          </div>
        <% } %>
      </div>
    <% }) %>
  </div>
</body>
</html>
